#version 330 core

in FragData {
  vec3 position;
  vec2 UV;
} in_data;

uniform sampler2D TextureSampler;
uniform float highlight;

// Output data
layout(location = 0) out vec3 color;

void main(){
  vec2 uv = in_data.UV - ivec2(in_data.UV);

  color = texture(TextureSampler, in_data.UV).rgb;
  color = mix(color, vec3(1, 0.69, 0.23), highlight * 0.3);
}
