#version 330 core

in VertexData {
  vec2 UV;
  vec3 color;
} in_data;

// Output data
layout(location = 0) out vec3 color;

// Values that stay constant for the whole mesh.
uniform sampler2D SkyTextureSampler;

void main(){
  // color = vec3(1.0, 0, 0);
  // color = in_data.color;
  color = mix(texture(SkyTextureSampler, in_data.UV).rgb, vec3(0, 0.3, 0.5), 0.5);
}
