#version 330
 
layout(triangles) in;
layout(triangle_strip, max_vertices=3) out;
 
in VertexData {
  vec3 position;
  vec2 UV;
  vec3 color_magna;
  vec3 normal_cameraspace;
  float visibility;
  float steepness;
  vec3 position_cameraspace;
  mat3 TBN;
} in_data[];
 
out FragData {
  vec3 position;
  vec2 UV;
  vec3 barycentric;
  vec3 color_magna;
  vec3 normal_cameraspace;
  float visibility;
  float steepness;
  vec3 position_cameraspace;
  mat3 TBN;
} out_data;

uniform vec4 plane;

void main() {
  for (int i = 0; i < 3; i++) {
    gl_Position = gl_in[i].gl_Position;

    out_data.position = in_data[i].position;
    out_data.UV = in_data[i].UV;
    out_data.color_magna = in_data[i].color_magna;
    out_data.normal_cameraspace = in_data[i].normal_cameraspace;
    out_data.visibility = in_data[i].visibility;
    out_data.steepness = in_data[i].steepness;
    out_data.position_cameraspace = in_data[i].position_cameraspace;
    out_data.TBN = in_data[i].TBN;

    out_data.barycentric = vec3(0.0);
    out_data.barycentric[i] = 1.0;
    gl_ClipDistance[0] = dot(vec4(in_data[i].position, 1.0), plane);

    EmitVertex();
  }
}
