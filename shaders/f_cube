#version 330 core

in FragData {
  vec3 position;
  vec2 UV;
  vec3 barycentric;
} in_data;

// Output data
layout(location = 0) out vec3 color;

void main(){
  vec2 uv = in_data.UV - ivec2(in_data.UV);

  if (uv.x < 0.02 || uv.y < 0.02){
    color = vec3(0.0, 0.0, 0.0);
  } else{
    color = vec3(0.5);
  }
}
